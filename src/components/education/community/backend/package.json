{
  "name": "graintrust-community-hub",
  "version": "1.0.0",
  "description": "GrainTrust Community Hub Backend - Separate from main farmer database",
  "main": "server-simple.js",
  "scripts": {
    "dev": "nodemon server-simple.js",
    "start": "node server-simple.js",
    "build": "tsc",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset --schema=./prisma/schema.prisma --force"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.3.1",
    "multer": "^1.4.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5",
    "@prisma/client": "^5.16.1",
    "prisma": "^5.16.1",
    "nodemailer": "^6.9.14",
    "uuid": "^10.0.0",
    "date-fns": "^3.6.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^10.0.0",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "typescript": "^5.5.3",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "community",
    "farming",
    "graintrust",
    "backend",
    "api"
  ],
  "author": "GrainTrust Team",
  "license": "MIT"
}
